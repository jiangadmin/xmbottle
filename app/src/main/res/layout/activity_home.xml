<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.wt.piaoliuping.widgt.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bolder_white_view_bg"
        android:gravity="bottom"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/message_btn"
            style="@style/text_14_999999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/tab_1"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="0dp"
            android:text="消息" />

        <RadioButton
            android:id="@+id/home_btn"
            style="@style/text_14_999999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_2"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="0dp"
            android:text="瓶子" />


        <RadioButton
            android:id="@+id/activity_btn"
            style="@style/text_14_999999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_3"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="0dp"
            android:text="好友" />

        <RadioButton
            android:id="@+id/mine_btn"
            style="@style/text_14_999999"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/tab_4"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingLeft="0dp"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>