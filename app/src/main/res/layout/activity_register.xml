<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/corner_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/text_tel"
            style="@style/text_15_999999"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:hint="手机号"
            android:padding="10dp"
            android:textColorHint="@color/darKGrayColor" />

        <include layout="@layout/layout_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/text_code"
                style="@style/text_15_999999"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:hint="输入验证码"
                android:inputType="phone"
                android:maxLength="6"
                android:padding="10dp"
                android:textColorHint="@color/darKGrayColor" />

            <TextView
                android:id="@+id/text_code_send"
                style="@style/text_12_555555"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center|right"
                android:padding="10dp"
                android:text="验证码" />
        </LinearLayout>

        <include layout="@layout/layout_line_horizontal" />

        <EditText
            android:id="@+id/text_password"
            style="@style/text_15_999999"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColorHint="@color/darKGrayColor" />

        <include layout="@layout/layout_line_horizontal" />

        <LinearLayout
            android:id="@+id/layout_sex"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/text_15_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:text="性别"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="（性别选择后不可更改）"
                android:textColor="@color/redColor"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/text_sex"
                style="@style/text_15_999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:text="男"
                android:textColor="@color/darKGrayColor" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <CheckBox
            android:id="@+id/btn_agreement"
            style="@style/text_14_999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="我同意" />

        <TextView
            android:id="@+id/register_xy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="《用户使用协议书》"
            android:textColor="@color/cc" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_red_bg"
        android:text="提    交"
        android:textColor="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:background="@color/darKGrayColor"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/btn_login"
            style="@style/text_14_ffffff"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/corner_big_red_bg"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="去登录" />
    </RelativeLayout>

    <TextView
        style="@style/text_10_555555"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="手机号码仅用于验证用户真实性，将会严格保密，不会泄露请放心。" />
</LinearLayout>